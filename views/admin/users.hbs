<div class="col-lg-9 top-margin-35">
    <div class="col-lg-12">
        <h2 class="text-center">Danh sách tài khoản</h2>
    </div>
	<div class="col-lg-12">
        <ul class="list-group">
            <div class="message-error">{{message}}</div>
            {{#if errormessage}}
                <div class="text-center">
                    <h1 class="message-error">Đã có lỗi xảy ra!</h1>
                    <div class="message-error">{{errormessage}}</div>
                </div>
            {{else}}
                {{#ifCond users.length '==' 0}}
                    <div class="col-md-12">
                        <p class="text-danger text-center">Không có tài khoản nào</p>
                    </div>
                {{/ifCond}}
				 {{#each users}}
                    <li class="list-group-item">
                        <strong>Tên tài khoản:</strong> <a href="/admin/user/edit/{{this._id}}">{{this.UserName}}</a> - <b>Email:</b> {{this.Email}}
                        <span class="pull-right">
                            <b>Quyền: </b>{{this.Role}}
                            {{#ifCond this._id '!=' ../user._id}}
                                <a href="/admin/user/delete/{{this._id}}" onclick="return confirm('Bạn có chắc chắn muốn xóa tài khoản này?')"><span class="glyphicon glyphicon-trash" aria-hidden="true"/></a>
                            {{/ifCond}}
                        </span>
                    </li>
				 {{/each}}
            {{/if}}
			</ul>
	</div>
</div>