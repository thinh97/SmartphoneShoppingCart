<div class="col-lg-9 top-margin-35">
	<div class="row">
		<div class="col-md-12">
            <h2 class="text-center"><b>Chỉnh sửa nhãn hiệu</b></h2>
			<form method="post" class="form-horizontal" action="/admin/brand/edit/{{brand._id}}" data-toggle="validator">
			<input type="hidden" name="id" value="{{brand._id}}" />
                {{#if message}}
                    <div class="message-success">{{message}}</div>
                {{/if}}
                {{#if errormessage}}
                    <div class="text-center">
                        <h3 class="message-error">Đã có lỗi xảy ra!</h3>
                        <div class="message-error">{{errormessage}}</div>
                    </div>
                {{/if}}
            <div class="form-group">
                <label for="name" class="col-sm-2 control-label">Tên nhãn hiệu</label>
                <div class="col-sm-10">
                    <input type="text" name="nameBr" class="form-control" minlength="1" maxlength="200" value="{{brand.Name}}" required/>
                </div>
		  	</div>
		  	<div class="form-group">
                <div class="text-center">
                    <button type="submit" class="btn btn-success">Cập nhật</button>
                </div>
  			</div>
            </form>
		</div>
	</div>
</div>