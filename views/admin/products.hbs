<div class="col-lg-9 top-margin-35">
    <div class="col-lg-12">
        <h2 class="text-center">Danh sách sản phẩm</h2>
    </div>
    <div class="col-lg-12">
        <ul class="list-group">
            {{#if errormessage}}
                <li class="list-group-item">
                    <h1 class="message-error">Đã có lỗi xảy ra! Không lấy được danh sách sản phẩm</h1>
                    <div class="message-error">{{errormessage}}</div>
                </li>
            {{else}}
                {{#ifCond results.length '==' 0}}
                    <div class="col-md-12">
                        <p class="text-danger text-center">Không có sản phẩm nào</p>
                    </div>
                {{/ifCond}}
                {{#each results}}
                    <li class="list-group-item">
                        <h4 class="pull-right text-danger" style="padding-left: 10px;"><a class="text-danger" href="/admin/product/delete/{{this._id}}" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm?');"> <i class="fa fa-trash-o"></i></a></h4>
                        <h5><a href="/admin/product/edit/{{this._id}}"><b>{{this.Title}}</b> - {{formatAmount this.Price}}VNĐ</a></h5>
                    </li>
                {{/each}}
            {{/if}}
        </ul>
    </div>
</div>