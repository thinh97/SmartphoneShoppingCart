<div class="col-lg-9 top-margin-35">
	<div class="row">
		<div class="col-md-12">
            <h2 class="text-center"><b>Thêm mới nhãn hiệu</b></h2>
			<form class="form-horizontal" method="post" action="/admin/brand/new" data-toggle="validator">
                {{#if message}}
                    <div class="message-success">{{message}}</div>
                {{/if}}
                {{#if errormessage}}
                    <div class="text-center">
                        <h1 class="message-error">Đã có lỗi xảy ra!</h1>
                        <div class="message-error">{{errormessage}}</div>
                    </div>
                {{/if}}
                <div class="form-group">
                    <label for="name" class="col-sm-2 control-label">Tên nhãn hiệu</label>
                    <div class="col-sm-10">
                        <input type="text" name="nameBr" class="form-control" minlength="1" maxlength="200" value="" required/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="text-center">
                        <button type="submit" class="btn btn-success">Tạo mới</button>
                    </div>
                </div>
            </form>
		</div>
	</div>
</div>