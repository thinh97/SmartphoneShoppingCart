{{#if success}}
    <div class="col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6" style="padding-top: 50px" >
        <div class="thumbnail col-md-offset-3 col-lg-offset-3" style="width: 40%;min-height: 0px">
            <img src="/images/success.jpg">
        </div>
        <h2 class="form-signin-heading text-center">Mật khẩu của bạn đã được thay đổi. Nhấn vào <b><a href="/users/signin">đây</a></b> để đăng nhập</h2>
    </div>
{{else}}
    {{#if expire}}
        <div class="col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6" style="padding-top: 50px" >
            <div class="thumbnail col-md-offset-3 col-lg-offset-3" style="width: 40%;min-height: 0px">
                <img src="/images/error.png">
            </div>
            <h2 class="message-error">Chức năng khôi phục mật khẩu đã hết hạn</h2>
        </div>
    {{else}}
        <div class="col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6" style="padding-top: 50px" >
            <form class="form-horizontal"  method="post" role="form" data-toggle="validator">
                <input type="hidden" name="frm_referringUrl" value="{{referringUrl}}">
                <h2 class="form-heading text-center">Đổi mật khẩu</h2>
                <div class="message-error">{{errormessage}}</div>
                <div class="form-group">
                    <label for="password" class="col-sm-3 control-label">Mật khẩu</label>
                    <div class="col-sm-9">
                        <input type="password" id="password" name="password" class="form-control" data-minlength="6" data-minlength-error="Mật khẩu phải dài từ 6 ký tự trở lên" placeholder="Mật khẩu" required data-error="Vui lòng điền mật khẩu">
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="passwordConfirm" class="col-sm-3 control-label">Xác nhận mật khẩu</label>
                    <div class="col-sm-9">
                        <input type="password" id="passwordConfirm" name="passwordConfirm" class="form-control" data-match="#password" data-match-error="Mật khẩu không khớp" placeholder="Xác nhận mật khẩu" required data-error="Vui lòng xác nhận mật khẩu">
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <div class="text-center">
                    <button class="btn btn-lg btn-primary" type="submit">Đổi mật khẩu</button>
                </div>
            </form>
        </div>
    {{/if}}
{{/if}}