{{#if products}}
<div class="row">
    <div class="col-lg-12">
        <h2 class="text-center"><b>Thông tin giỏ hàng</b></h2>
    </div>
    <div class="col-sm-7 col-md-7 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
          {{#each products}}
           <li class="list-group-item">
                <strong>{{this.item.Title}}<span class="badge">{{this.qty}}</span></strong>
               <div class="pull-right" style="font-size: 20px">
                   <span class="label label-success">{{formatAmount this.Price}} VNĐ</span>
                   <a class="text-danger" href="/user/shopping-cart/delete/{{this.item._id}}"><i class="fa fa-trash-o"></i></a>
               </div>
            </li>
          {{/each}}
           
        </ul>
    </div>
</div>
<div class="row">
    <div class="text-center">
        <strong>Total: {{formatAmount totalPrice}} VND</strong>
    </div>
</div>
<hr>
<div class="row">
    <div class="text-center">
        <a href="/user/checkout" type="button" class="btn btn-success">Thanh toán</a>
    </div>
</div>
{{else}}
<div class="row">
    <div class="text-center">
        <h2>Giỏ hàng trống</h2>
    </div>
</div>
{{/if}}