{{#if products}}
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
          {{#each products}}
           <li class="list-group-item">
                <span class="badge">{{this.qty}}</span>
                <strong>{{this.item.Title}}</strong>
                <span class="label label-success">{{this.Price}} VND</span>
                <div class="btn-group">
                    <button class="btn btn-primary btn-xs dropdown-toggle" type="button">Actions <span class="caret"></span></button>
                    <ul class="dropdown-menu">
                        <li></li>
                    </ul>
                </div>
            </li>
          {{/each}}
           
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-3 col-sm-offset-3">
        <strong>Total: {{totalPrice}} VND</strong>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-3 col-sm-offset-3">
        <button type="button" class="btn btn-success">Check out</button>
    </div>
</div>
{{else}}
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-3 col-sm-offset-3">
        <h2>No item in cart</h2>
    </div>
</div>
{{/if}}


