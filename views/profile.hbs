<div class="col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6">
    <form class="form-horizontal"  method="post" role="form" data-toggle="validator">
        <h2 class="form-heading text-center">Thông tin tài khoản</h2>
        <div class="message-success">{{message}}</div>
        {{#if errormessage}}
            <li class="list-group-item">
                <h1 class="message">Đã có lỗi xảy ra!</h1>
                <div class="message">{{errormessage}}</div>
            </li>
        {{/if}}
        <div class="form-group">
            <label for="title" class="col-sm-3 control-label">Tên tài khoản</label>
            <div class="col-sm-9">
                <input type="text" id="username" name="username" value="{{user.UserName}}" class="form-control" placeholder="Tên tài khoản" required>
            </div>
        </div>
        <!--<div class="form-group">-->
            <!--<label for="title" class="col-sm-3 control-label">Mật khẩu</label>-->
            <!--<div class="col-sm-9">-->
                <!--<input type="password" id="password" name="password" class="form-control" placeholder="Mật khẩu" required>-->
            <!--</div>-->
        <!--</div>-->
        <!--<div class="form-group">-->
            <!--<label for="title" class="col-sm-3 control-label">Xác nhận mật khẩu</label>-->
            <!--<div class="col-sm-9">-->
                <!--<input type="password" id="password-confirm" name="password-confirm" class="form-control" placeholder="Xác nhận mật khẩu" required>-->
            <!--</div>-->
        <!--</div>-->
        <div class="form-group">
            <label for="title" class="col-sm-3 control-label">Email</label>
            <div class="col-sm-9">
                <input type="email" id="email" name="email" value="{{user.Email}}" class="form-control" placeholder="Email" required>
            </div>
        </div>
        <div class="form-group">
            <label for="title" class="col-sm-3 control-label">Họ và tên</label>
            <div class="col-sm-9">
                <input type="text" id="name" name="name" value="{{user.Name}}" class="form-control" placeholder="Họ tên" required>
            </div>
        </div>
        <div class="form-group">
            <label for="title" class="col-sm-3 control-label">Giới tính</label>
            <div class="col-sm-9 top-margin-12">
                <input type="radio" name="gender" value="Male" {{#ifCond user.Gender '==' 'Male'}}checked{{/ifCond}}> Nam &nbsp;&nbsp;&nbsp;&nbsp;
                <input type="radio" name="gender" value="Female" {{#ifCond user.Gender '==' 'Female'}}checked{{/ifCond}}> Nữ
            </div>
        </div>
        <div class="form-group">
            <label for="title" class="col-sm-3 control-label">Ngày sinh</label>
            <div class="col-sm-9">
                <input type="date" id="dob" name="dob" value="{{formatDate user.Birthday "YYYY-MM-DD"}}" class="form-control" min="1980-01-01" max="{{CurentDate}}" placeholder="Ngày-Tháng-Năm" required>
            </div>
        </div>
        <div class="form-group">
            <label for="title" class="col-sm-3 control-label">Địa chỉ</label>
            <div class="col-sm-9">
                <input type="text" id="address" name="address" value="{{user.Address}}" class="form-control" placeholder="Địa chỉ" required>
            </div>
        </div>
        <div class="form-group">
            <label for="title" class="col-sm-3 control-label">Số điện thoại</label>
            <div class="col-sm-9">
                <input type="number" id="phone" name="phone" value="{{user.Phone}}" class="form-control" placeholder="Điện thoại" required>
            </div>
        </div>
        <div class="text-center">
        <button class="btn btn-lg btn-primary" id="updateProfileForm" type="submit">Cập nhật</button>
        </div>
    </form>
</div>